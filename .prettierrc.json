{
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "tabWidth": 4,
    "bracketSpacing": true,
    "plugins": [
        "prettier-plugin-tailwindcss",
        "@shufo/prettier-plugin-blade"
    ],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade",
                "tabWidth": 4
            }
        }
    ]
}
